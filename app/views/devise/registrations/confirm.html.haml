.signup-header
.sign-up-main
  .sign-up-main__info
    個人情報入力
  .sign-up-main__adress-form
    = form_for @user,url:{action:"complete"} do |f|
      = devise_error_messages!
      = f.hidden_field :nickname
      - @user.nickname
      = f.hidden_field :email
      - @user.email
      = f.hidden_field :password
      - @user.password
      = f.hidden_field :password_confirmation
      - @user.password
      = f.hidden_field :prefecture_id
      - @user.prefecture_id
      .sign-up-main__adress-form__field--top
        = f.label :お名前
        %span.form-require
          必須
        %br/
        = f.text_field :last_name,style:"margin-bottom:5px"
        %br/
        = f.text_field :first_name
      .sign-up-main__adress-form__field--name
        = f.label :お名前カナ
        %span.form-require
          必須
        %br/
        = f.text_field :last_name_kana,style:"margin-bottom:5px"
        %br/
        = f.text_field :first_name_kana
      .sign-up-main__adress-form__field--name
        = f.label :郵便番号
        %span.form-require
          必須
        %br/
        = f.number_field :zip_code
      .sign-up-main__adress-form__field
        = f.label :都道府県
        %span.form-require
          必須
        %br/
        .form--prefecture
          = f.collection_select :prefecture_id,Prefecture.all,:id,:prefecture
      .sign-up-main__adress-form__field
        = f.label :市町村
        %span.form-require
          必須
        %br/
        = f.text_field :city
      .sign-up-main__adress-form__field
        = f.label :番地
        %span.form-require
          必須
        %br/
        = f.text_field :address
      .sign-up-main__adress-form__field
        = f.label :建物
        %br/
        = f.text_field :building
      .sign-up-main__adress-form__field
        = f.label :電話
        %br/
        = f.number_field :telephone
      .sign-up-main__adress-form__field--birth
        = f.label :生年月日,class:"birth-info"
        %span.form-require
          必須
        %br/
        %ul.birth--field
          %li.birth--list
            .birth--select
              = f.select :birth_year,@year,prompt:"選択してください"
            .birth
              年
          %li.birth--list
            .birth--select
              = f.select :birth_month,@month,prompt:"選択してください"
            .birth
              月
          %li.birth--list
            .birth--select
              = f.select :birth_day,@day,prompt:"選択してください"
            .birth
              日
      .submit-btn
        = f.submit "登録完了",class:"next-btn"
